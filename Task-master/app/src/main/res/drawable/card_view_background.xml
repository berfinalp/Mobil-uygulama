<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light Theme -->
    <item android:state_checked="false" android:state_window_focused="false">
        <shape>
            <solid android:color="@color/light_card_background" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/light_card_border" android:width="1dp" />
        </shape>
    </item>

    <!-- Dark Theme -->
    <item android:state_checked="false" android:state_window_focused="false">
        <shape>
            <solid android:color="@color/dark_card_background" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/dark_card_border" android:width="1dp" />
        </shape>
    </item>

    <!-- Add other states as needed -->

</selector>
